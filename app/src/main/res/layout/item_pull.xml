<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/titulo_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:text="Título Repositório"/>

        <TextView
            android:id="@+id/descricao_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_margin="8dp"
            android:textSize="16sp"
            android:layout_below="@id/titulo_pull"
            android:text="Descrição Repositório"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icone_usuario_pull"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/descricao_pull"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_usuario"
            android:clickable="true"/>

        <TextView
            android:id="@+id/username_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descricao_pull"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_toRightOf="@id/icone_usuario_pull"
            android:textColor="@color/black"
            android:textSize="16sp"
          android:text="Username" />
        <TextView
            android:id="@+id/data_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="8dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/icone_usuario_pull"
            android:text="xx/xx/xxxx"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>